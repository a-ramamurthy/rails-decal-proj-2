<h3> </h3>
<h2> <%= current_user.organization %> </h2>
<div class="row">
  <div class="col-lg-6">
    <div class="input-group col-md-12">
      <input type="text" class="form-control input-lg" placeholder="Search posts..." />
        <span class="input-group-btn">
          <button class="btn btn-info btn-lg" type="button">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </span>
    </div>
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
<%= button_to "New Post", new_path(), :class => "button large", :method => :get %>
<% @posts.each do |post| 
  if post.user.organization == current_user.organization%>
<div class="panel panel-default">
  <div class="panel-body">
  <h2> <%= link_to post.title, post %> </h2>
  <p><%= post.body %> </p>
  <p><%=link_to post.user.email, post.user %> </p>
  <p><%=post.user.created_at %></p>
  <a href="#"><%=link_to "Comments", post %><span class="badge"><%= post.comments.count %></span></a>
  <div class="panel panel-default">
  <div class="panel-body">
  <% post.tags.each do |tag| %>
  <span style="white-space: nowrap;"><%= link_to tag.name, tag %></span>
  <% end %>
  </div>
</div>
  <% if current_user == post.user %>
      <%= button_to "Edit", edit_post_path(post), :class => "button small", :method => :get %>
      <%= button_to "Delete", post, :confirm => "Are you sure?", :class => "button small", :method => :delete %>
  <% end %>
  <% end %>
  </div>
</div>
<% end %>


